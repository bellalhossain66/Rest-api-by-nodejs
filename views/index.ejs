<html>
    <head>
        <meta charset="utf-8">
        <meta name="viewport" content="width=device-width, initial-scale=1">
        <title>currency</title>
        <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.0/css/bootstrap.min.css">
    </head>
    <body>
        <div class="wrapper">
        <div class="content-wrapper">
            <div class="content">
                <div class="content-fluid">
                    <div class="row">
                        <div class="col-md-12 col-lg-12">
                            <div class="col-lg-12 col-md-12">
                                <div class="card mt-5">
                                    <div class="card-header bg-dark text-white">
                                        <span class="header-tools">BTC</span>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                    <th>Current rate</th>
                                                    <th colspan="2">Lowest rate</th>
                                                    <th colspan="2">Highest rate</th>
                                                </thead>
                                                <tbody class="append-data">
                                                    <div class="load"></div>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                    <div class="col-md-12 col-lg-12 mt-5">
                        <div class="row">
                            <div class="col-md-12 col-lg-2">
                                <div class="card">
                                    <div class="card-header bg-dark text-white">
                                        <span>Click on Currency</span>
                                    </div>
                                    <div class="card-body currency-list-body">currency list here..</div>
                                </div>
                            </div>
                            <div class="col-md-12 col-lg-10">
                                <div class="card">
                                    <div class="card-header bg-dark text-white">
                                        <span>Currency Detail</span>
                                    </div>
                                    <div class="card-body">
                                        <div class="table-responsive">
                                            <table class="table table-bordered table-striped">
                                                <thead>
                                                    <th>Currency</th>
                                                    <th>Rate</th>
                                                    <th colspan="2">Lowest rate</th>
                                                    <th colspan="2">Highest rate</th>
                                                </thead>
                                                <tbody class="append-data-select">
                                                    <tr>
                                                        <td colspan="5">Currency detail after click left list...</td>
                                                    </tr>
                                                </tbody>
                                            </table>
                                        </div>
                                    </div>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>
    </div>
    </body>
</html>
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.6.0/jquery.min.js"></script>
